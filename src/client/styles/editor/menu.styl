menu
  margin: 0;
  padding: 0;

.menu-item
  display: inline-block;
  border-right: 1px solid rgba(0,0,0,0);
  border-left: 1px solid rgba(0,0,0,0);

  & > a
    padding: 20px 10px;
    display: block;
    color: rgba(0,0,0,.62);

    &:hover, &.active
      color: #cd9023;

  &.active
    background: #fff;
    border-right: 1px solid rgba(0,0,0,.1);
    border-left: 1px solid rgba(0,0,0,.1);

  & > i
    margin-right: 5px;

  .menu-item-content
    display: block;
    position: absolute;
    color: #000;
    background: #fff;
    padding: 20px;
    box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.3);
    overflow-y: auto;
    max-height: calc(100vh - 60px);

    .content
      padding: 20px 60px;
      margin: 0;

    &.full-width
      width: 100%;
      left: 0
      padding: 0;
      box-sizing: border-box;

    label
      font-size: 12px;
      color: #000;
      opacity: 0.62;
    
    input
      padding: 10px;
      font-family: 'Open Sans Condensed', sans-serif;
      box-sizing: border-box;

    button
      color: #fff;
      border: none;
      text-align: center;
      box-shadow: 1px 1px 4px 0px rgba(0,0,0,0.7);
      cursor: pointer;
      padding: 10px 20px;

      &:hover
        opacity: 0.9;

    fieldset
      background: rgba(0,0,0,.03);
      border: 1px solid rgba(0,0,0,.1)

      legend
        color: rgba(0,0,0,.5);
        font-size: 0.9em;


