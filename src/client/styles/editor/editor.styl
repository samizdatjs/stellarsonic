.tags
  li
    padding: 12px 24px;
    margin-right: 10px;
    background: rgba(255,255,255,.2);
    height: 50px;
    box-sizing: border-box;
    white-space: nowrap;
    flex: 1;

    a
      width: 20px;
      padding: 3px;
      margin-right: -10px;
      color: rgba(0,0,0,.3);

      &:hover
        color: rgba(0,0,0,.62);

.edit-panel
  position: absolute;
  top: 60px;
  bottom: 0;
  left: 0;
  width: 500px;
  color: rgba(0,0,0,.62);
  font-family: 'Open Sans Condensed', sans-serif;
  font-weight: 200;
  box-sizing: border-box;

.timeline-edit-panel
  position: absolute;
  top: 0;
  height: 60px;
  left: 0;
  right: 0;
  display: grid;
  grid-template-columns: 100px 100px 100px 1fr;

.post-edit-tab
  display: block;
  border-right: 1px solid rgba(0,0,0,.3);
  background:#646360;
  text-align: center;
  color: #fff;
  padding: 15px 0;
  font-size: 1.3em;
  height: 60px;
  box-sizing: border-box;

  &.selected
    background: #e8e5df
    color: rgba(0,0,0,.62);
    cursor: unset;