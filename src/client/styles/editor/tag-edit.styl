.tag-list-edit
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column-gap: 20px;

  ul
    list-style: none;
    margin: 0;
    padding: 0;

    li
      background: #fff;
      margin-right: 10px;
      display: inline-block;
      padding: 10px;
      box-shadow: 1px 1px 5px 0px rgba(0,0,0,0.3);

      .remove
        margin-left: 5px;
