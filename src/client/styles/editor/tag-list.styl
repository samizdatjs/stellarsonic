.tag-list
  ul
    list-style: none;
    margin: 0;
    padding: 0;

    li
      background: #fff;
      margin-right: 10px;
      display: inline-block;
      padding: 10px;
      box-shadow: 1px 1px 5px 0px rgba(0,0,0,0.3);

      .remove
        cursor: pointer;
        margin-left: 5px;

    .add
      color: #fff;
      border: none;
      text-align: center;
      box-shadow: 1px 1px 5px 0px rgba(0,0,0,0.5);
      cursor: pointer;
      padding: 10px 20px;
      background: #2eabb7;
