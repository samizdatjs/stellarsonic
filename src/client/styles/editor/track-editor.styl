.playlist-editor-tracks
  display: grid;
  grid-template-columns: 1fr 60px;

  .add-track
    display: block;
    padding: 12px;
    background: #2eabb7
    color: #fff;
    border-bottom: 1px solid rgba(0,0,0,.1);
    box-sizing: border-box;
    text-align: center;

    &:hover
      opacity: 0.9;
