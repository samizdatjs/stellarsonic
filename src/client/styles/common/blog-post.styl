@import '../settings';

@keyframes SlideInRight {
  0% {
    transform: translateX(100%);
  }

  100% {
    transform: translateX(0);
  }
}

@keyframes SlideOutRight {
  0% {
    transform: translateX(0%);
  }

  100% {
    transform: translateX(100%);
  }
}

@keyframes SlideInBottom {
  0% {
    transform: translateY(100%);
  }

  100% {
    transform: translateY(0);
  }
}

@keyframes SlideOutBottom {
  0% {
    transform: translateY(0%);
  }

  100% {
    transform: translateY(100%);
  }
}

.post
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  position: absolute;

  &.edit
    top: 100px;
    bottom: 0;
    left: 500px;
    right: 20px;
    box-shadow: 0px 0px 12px 3px rgba(0,0,0,0.25);

.panel-bottom
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 250px;
  z-index: 20;
  box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.5);

  &.aurelia-hide-remove
    -webkit-animation: SlideInBottom 0.3s;
    animation: SlideInBottom 0.3s;
    transition-timing-function: ease;
  
  &.aurelia-hide-add
    -webkit-animation: SlideOutBottom 0.3s;
    animation: SlideOutBottom 0.3s;
    transition-timing-function: ease;


// Background image
//-----------------------------------------------------------------------------
.background-image
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 0.03;
  transform: scaleX(-1);


// Cover
//-----------------------------------------------------------------------------
#post-cover
  margin-top: 60px;

  @media screen and (min-width: bp-medium)
    margin-top: 100px;

.cover-main
  position: relative;


// Body
//-----------------------------------------------------------------------------
#post-body
  margin: 0 auto;
  padding-bottom: 100px;
  background: color-background;
  z-index: 3;

  aside
    padding: 0 content-padding;

    @media screen and (min-width: bp-medium)
      padding: 0;

    @media screen and (min-width: bp-large)
      margin-top: 100px;

  .text
    padding: 100px 0;

.edit
  .nav-button
    .button
      color: rgba(0,0,0,.62);

.nav-button
  position: absolute;
  top: 0;
  z-index: 200;
  width: content-padding;
  height: content-padding;
  text-align: center;

  a
    vertical-align: middle;
    line-height: content-padding;
