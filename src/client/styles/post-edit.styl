.post-edit
  position: absolute;
  top: 80px;
  height: 300px;
  width: 60px;
  right: 60px;
  background: rgb(255,255,255);
  z-index: 100;
  box-shadow: 1px 1px 8px 0px rgba(0,0,0,0.5)
  border-radius: 30px;
  // padding: 20px;

  .item
    color: rgb(0,0,0)

.edit-button-group
  position: absolute;
  top: 20px;
  left: 20px;
  background: rgba(0,0,0,.8);
  border-radius: 5px;
  border: 1px solid #000;
  z-index: 100;

.edit-button
  display: inline-block;
  padding: 10px 14px;
  color: #fff;

.dropdown
  display: inline-block;

  .dropdown-content
    display: none;
    position: absolute;
    color: #000;
    background: #fff;
    padding: 20px;
    box-shadow: 1px 1px 5px 0px rgba(0,0,0,0.5)

    label
      font-size: 12px;
      color: #000;
      opacity: 0.62;
    
    input
      padding: 10px;

.dropdown:hover .dropdown-content {display: block;}

.toggle-edit
  background: #de8e5c;
  margin: 30px;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 200;
  width: 60px;
  height: 60px;
  text-align: center;
  border-radius: 50%;
  box-shadow: 1px 1px 8px 0px rgba(0,0,0,0.5)
  transition: transform 0.4s;

  &.save
    transform: rotate3d(0, 1, 0, 180deg);

  a
    color: #fff;
    font-size: 1.5em;
    transition: opacity 0.2s;
    text-decoration: none;
    vertical-align: middle;
    line-height: 60px;

.headline-edit
  background: rgba(0,0,0,.1);
  color: #fff;
  padding: 4px 20px;
  border: 1px solid rgba(0,0,0,.2);
  font-family: 'Open Sans Condensed', sans-serif;
  font-weight: 200;
  font-size: 0.8em;