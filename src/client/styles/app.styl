@import 'settings';


// General
//-----------------------------------------------------------------------------
body
  margin: 0;
  min-height: 100vh;
  color: #fff;
  background-color: #e8e5df;

h1
  font-family: font-primary;
  font-weight: 200;
  font-size: 1.5em;

p
  font-family: font-primary;
  font-weight: 300;
  font-size: 1.2em;
  letter-spacing: 0.02em;
  word-spacing: 0.1em;

a
  font-family: font-secondary;
  text-decoration: none;
  color: color-primary-darken;

  &:hover
    color: color-primary-lighten;

img
  width: 100%;

ul.plain
  list-style: none;
  margin: 0;
  padding: 0;

.button
  color: color-primary-lighten;
  font-size: 1.5em;
  transition: opacity .2s;
  text-decoration: none;

  &:hover
    cursor: pointer;
    opacity: 1;
    color: #fff;


// Image
//-----------------------------------------------------------------------------
.blend-bottom
  -webkit-mask-image: -webkit-gradient(linear, left 70%, left bottom, from(#000), to(rgba(0,0,0,0)));


// Content
//-----------------------------------------------------------------------------
.container
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
  overflow: auto;
  overflow-x: hidden;

.content
  position: relative;
  padding: 0 content-padding;
  margin: content-padding 0;
  box-sizing: border-box;

.screen
  width: 100vw;
  height: 100vh;

.left
  left: 0;

.right
  right: scrollbar-width;

.pad
  padding: 0 content-padding;

.pad-xsmall-up
  @media screen and (min-width: bp-xsmall)
    padding: 0 content-padding;

.pad-small-up
  @media screen and (min-width: bp-small)
    padding: 0 content-padding;

.pad-medium-up
  @media screen and (min-width: bp-medium)
    padding: 0 content-padding;
  
.segment
  @media screen and (min-width: bp-medium)
    width: 100%;
    max-width: bp-large;
    margin: 0 auto;
    box-sizing: border-box;
  
  @media screen and (min-width: bp-large)
    max-width: bp-xlarge;


// Scrollbar
//-----------------------------------------------------------------------------
::-webkit-scrollbar
  width: scrollbar-width;

::-webkit-scrollbar-track
  box-shadow: inset 0 0 5px grey; 
  border-radius: 10px;

::-webkit-scrollbar-thumb
  background: color-primary;


// Title bar
//-----------------------------------------------------------------------------
.title
  text-align: center;
  box-sizing: border-box;
  margin-top: 0;
  z-index: 100;
  position: absolute;
  width: 100%;
  padding: 15px (content-padding / 2);
  background: rgba(0,0,0,.2);
  border-bottom: 1px solid rgba(0,0,0,0.3);
  box-shadow: title-shadow;
  height: content-padding;

  h1
    margin: 0;
  
  
// Text
//-----------------------------------------------------------------------------
.excerpt
  font-size: 1.2em;
  letter-spacing: 0.02em;
  word-spacing: 0.1em;
  color: rgba(0,0,0,0.62);
  text-align: center;
  margin: 0 auto;
  position: relative;
  padding: 5px 60px;
  box-sizing: border-box;
  max-width: 900px;
  
  @media screen and (min-width: bp-xlarge)
    width: 100%;
    max-width: 100%;

  &:after
    bottom: 0;
  &:before
    top: 0;

  &:before, &:after
    background-color: #cd9023;
    content: "";
    height: 1px;
    left: 50%;
    margin-left: -18px;
    position: absolute;
    width: 36px;
