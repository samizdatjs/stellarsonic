@import 'settings';

article
  color: color-text;
  font-family: font-primary;
  position: relative;
  margin: 50px auto;
  padding: 0 content-padding;

  @media screen and (min-width: bp-small)
    padding: 0 (2 * content-padding);
  
  @media screen and (min-width: bp-medium) and (max-width: bp-large)
    padding: 0 (3 * content-padding);

  a
    color: #cd9023;
    text-decoration: none;
    font-style: italic;

  img
    width: 100%;
    margin: 30px 0;

  img[src*='#expand']
    display: inline-block;
    width: "calc(100% + %s)" % (2 * content-padding);
    margin-left: -(content-padding);
    
    @media screen and (min-width: bp-small)
      width: "calc(100% + %s)" % (4 * content-padding);
      margin-left: -(2 * content-padding);
  
    @media screen and (min-width: bp-medium) and (max-width: bp-large)
      width: "calc(100% + %s)" % (6 * content-padding);
      margin-left: -(3 * content-padding);

  img[src*='#left']
    @media screen and (min-width: bp-small)
      float: left;
      margin: 5px 30px 15px 0;
      width: 60%;
      margin-left: -(2 * content-padding);

    @media screen and (min-width: bp-medium) and (max-width: bp-large)
      width: 75%;
      margin-left: -(3 * content-padding);

  h1, h2, h3, h4, h5, h6
    font-weight: 300;

  p
    margin: 40px 0;

  hr
    border: 0;
    margin: 30px 0;
    position: relative;
    height: 1px;

    &:after
      background-color: #cd9023;
      content: "";
      height: 1px;
      left: 50%;
      margin-left: -18px;
      position: absolute;
      width: 36px;

.video
	position: relative;
	padding-bottom: video-aspect-ratio;
	height: 0;

.video iframe
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
