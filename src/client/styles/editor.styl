@import 'settings';


// General
//-----------------------------------------------------------------------------
.editor-navbar
  position: absolute;
  width: 100%;
  background: rgba(0,0,0,.02)!important;

  .uk-navbar-item, .uk-navbar-nav>li>a, .uk-navbar-toggle
    font-size: .675rem;

.setting-title, label
  font-family: 'Raleway', sans-serif;
  font-size: 0.9em;
  color: rgba(0,0,0,0.62);
  text-transform: uppercase;
  font-weight: 400;
  display: inline-block;

label
  margin-bottom: 10px;

.setting-value
  display: inline;
  float: right;
  margin: 0;
  font-size: 1.4em;
  color: rgba(0,0,0,.62);
  font-family: 'Raleway', sans-serif;

.editor-toolbar
  position: absolute;
  top: 0;
  height: 60px;
  left: 0;
  right: 0;
  display: grid;

  .editor-tab
    display: block;
    border-right: 1px solid rgba(0,0,0,.3);
    background:#646360;
    text-align: center;
    color: #fff;
    padding: 15px 0;
    font-size: 1.3em;
    height: 60px;
    box-sizing: border-box;

    &.selected
      background: #e8e5df
      color: rgba(0,0,0,.62);
      cursor: unset;

.editor-panel
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 500px;
  color: rgba(0,0,0,.62);
  font-family: 'Open Sans Condensed', sans-serif;
  font-weight: 200;
  box-sizing: border-box;

  &.toolbar
    top: 100px;

  .uk-hr, hr
    border-top: 1px solid rgba(0,0,0,.1);

  .uk-card
    background: rgba(255,255,255,.2);

  .uk-card-title
    font-family: 'Open Sans Condensed', sans-serif;
    font-size: 1.2em;
    color: rgba(0,0,0,.62);

  .uk-nav-default > li > a
    font-family: 'Open Sans Condensed', sans-serif;
    font-weight: 200;
    font-size: 1.8em;

.post-editor-toolbar
  grid-template-columns: 100px 100px 100px 100px 1fr;

.home-editor-toolbar
  grid-template-columns: 100px 100px 1fr;

// Image
//-----------------------------------------------------------------------------
.image-selected
  border: 5px solid #fff;

// Text
//-----------------------------------------------------------------------------
.text-editor
  height: calc(100% - 80px);
  box-sizing: border-box;

  textarea
    resize: none;
    border: none;
    padding: 20px;

    &:focus
      border: 1px solid rgba(0,0,0,0.1);

// Tag list
//-----------------------------------------------------------------------------
.tags
  li
    padding: 12px 24px;
    margin-right: 10px;
    background: rgba(255,255,255,.2);
    height: 50px;
    box-sizing: border-box;
    white-space: nowrap;
    flex: 1;

    a
      width: 20px;
      padding: 3px;
      margin-right: -10px;
      color: rgba(0,0,0,.3);

      &:hover
        color: rgba(0,0,0,.62);


// Playlist timeline
//-----------------------------------------------------------------------------
playlist-timeline
  width: 100%;

.timeline
  box-shadow: inset 1px 2px 5px -2px rgba(0,0,0,0.3)

.timestamps
  position: relative;
  cursor: pointer;

  .progress
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    background: rgba(46,170,183,.22);
    transition: width 0.2s;
    transition-timing-function: ease-in-out;

  ul
    display: flex

    li
      height: 40px
      display: block
      background: rgba(0,0,0,.02)
      border-bottom: 1px solid rgba(0,0,0,.1);
      box-sizing: border-box;

      &:not(:last-child)
        border-right: 1px solid rgba(0,0,0,.2)

.track-handles
  display: flex

  li
    height: 40px
    display: block
    background: rgba(0,0,0,.03)
    border-bottom: 1px solid rgba(0,0,0,.1);
    cursor: pointer;
    box-sizing: border-box;

    &:not(:last-child)
      border-right: 1px solid rgba(0,0,0,.2)

    &:hover
      background: rgba(0,0,0,.03)

    &.selected
      background: color-editor-background;
      border-bottom: none;

// Color picker
//-----------------------------------------------------------------------------
.color-picker
  position: relative;
  text-align: left;

  .color-sample
    position: absolute;
    width: 40px;
    height: 40px;
    left: 5px;
    top: 5px;
    color: #fff;
    text-align: center;

  .color-name
    margin-left: 30px;

.color-picker-input
  display: none;


// Range input
//-----------------------------------------------------------------------------
.range-setting
  input[type=range] {
    width: 100%;
    margin: 5.5px 0;
    background-color: transparent;
    -webkit-appearance: none;
  }
  input[type=range]:focus {
    outline: none;
  }
  input[type=range]::-webkit-slider-runnable-track {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 3px;
    width: 100%;
    height: 3px;
    cursor: pointer;
  }
  input[type=range]::-webkit-slider-thumb {
    margin-top: -5.6px;
    width: 17px;
    height: 17px;
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.3);
    border-radius: 17px;
    cursor: pointer;
    -webkit-appearance: none;
  }
  input[type=range]:focus::-webkit-slider-runnable-track {
    background: rgba(0,0,0,.15);
  }
  input[type=range]::-moz-range-track {
    background: rgba(0, 0, 0, 0.1);
    border: 0.1px solid rgba(1, 1, 1, 0.2);
    border-radius: 3px;
    width: 100%;
    height: 3px;
    cursor: pointer;
  }
  input[type=range]::-moz-range-thumb {
    width: 17px;
    height: 17px;
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.3);
    border-radius: 17px;
    cursor: pointer;
  }
  input[type=range]::-ms-track {
    background: transparent;
    border-color: transparent;
    border-width: 5.5px 0;
    color: transparent;
    width: 100%;
    height: 3px;
    cursor: pointer;
  }
  input[type=range]::-ms-fill-lower {
    background: #000000;
    border: 0.1px solid rgba(1, 1, 1, 0.2);
    border-radius: 12px;
  }
  input[type=range]::-ms-fill-upper {
    background: rgba(0, 0, 0, 0.1);
    border: 0.1px solid rgba(1, 1, 1, 0.2);
    border-radius: 12px;
  }
  input[type=range]::-ms-thumb {
    width: 17px;
    height: 17px;
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.3);
    border-radius: 17px;
    cursor: pointer;
    margin-top: 0px;
    /*Needed to keep the Edge thumb centred*/
  }
  input[type=range]:focus::-ms-fill-lower {
    background: rgba(0, 0, 0, 0.1);
  }
  input[type=range]:focus::-ms-fill-upper {
    background: rgba(0,0,0,.15);
  }
  /*TODO: Use one of the selectors from https://stackoverflow.com/a/20541859/7077589 and figure out
  how to remove the virtical space around the range input in IE*/
  @supports (-ms-ime-align:auto) {
    /* Pre-Chromium Edge only styles, selector taken from hhttps://stackoverflow.com/a/32202953/7077589 */
    input[type=range] {
      margin: 0;
      /*Edge starts the margin from the thumb, not the track as other browsers do*/
    }
  }
