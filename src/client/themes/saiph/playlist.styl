@import '../../styles/animations.styl';
@import '../../styles/settings.styl';

.saiph-playlist
  background: #fff;
  overflow-y: scroll;

  .timeline
    .progress
      background: #fff;
      opacity: 0.1;

// Title
//-----------------------------------------------------------------------------
.title
  font-family: font-secondary
  color: rgba(0,0,0,.62);
  font-size: 2.5em;
  text-align: center;
  text-align: left;

.subtitle
  font-family: font-primary
  font-size: 1.3em;
  margin-top: -20px;
  color: #e9d1a3!important;
  text-transform: uppercase;
  border-top: 1px solid rgba(0,0,0,.1);

.visualizer-canvas
  width: 100%;

.play-button
  position: absolute;
  left: calc(50% - 28px);
  top: 154px;
  font-size: 3.5em;
  color: #e9d1a3;

.track-name
  font-family: font-secondary;
