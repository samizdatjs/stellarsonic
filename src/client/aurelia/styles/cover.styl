@import 'settings';

cover
  .cover
    position: relative;
    padding-top: 61.8%;

    .cover-frame
      background: #d6cabe;
      display: flex;
      position: absolute;
      width: 100%;
      height: 100%;
      box-sizing: border-box;
      padding: 0;  
      top: 0;
      border-bottom: 1px solid #000;

    .cover-image
      width: 100%;
      box-shadow: inset 0px 0px 10px 4px rgba(0,0,0,0.5);

    .shadow
      transform: translateY(100%) scaleY(-1);
      opacity: 0.1;
      -webkit-mask-image: -webkit-gradient(linear, left 0%, left bottom, from(rgba(0,0,0,0)), to(rgba(0,0,0,1)));
      z-index: -1;

  @media screen and (min-width: 900px)
    padding: 60px;
    padding-bottom: 0;

    .cover
      .cover-frame
        padding: 37px;
        border-bottom: none;

      .shadow
        transform: translateY(calc(100% + 20px)) scaleY(-1);