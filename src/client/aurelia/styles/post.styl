@import 'settings';

@keyframes postEnter
  0% {opacity: 1;}
  100% {opacity: 1;}

@keyframes postLeave
  0% {opacity: 1;}
  100% {opacity: 1;}

@keyframes coverFrameLeave
  0%
    transform: scale(1);
  100%
    transform: scale(0.8);

@keyframes coverFrameEnter
  0%
    transform: scale(0.8);
  100%
    transform: scale(1);

@keyframes playerEnter
  0% {transform: translateY(260px);}
  100% {transform: translateY(0px);}

@keyframes playerLeave
  0% {transform: translateY(0px);}
  100% {transform: translateY(260px);}

.post.au-enter-active
  animation: postEnter 0.5s;

  cover
    animation: coverFrameEnter 0.5s;
  .player
    animation: playerEnter 0.5s;

.post.au-leave-active
  background: #100d0c!important;

  animation: postLeave 0.5s;

  cover
    animation: coverFrameLeave 0.5s;
  .player
    animation: playerLeave 0.5s;

.hidden
  display: none!important;

.post
  transition: background 0.3s;

.playlist-section
  margin: 100px 0;

.content-section
  background: #fff;

.cover-footer
  position: absolute;
  width: 100vw;
  height: 260px;
  bottom: 0;

.post-content
  margin: 0 auto;
  padding: 100px 0;
  
.cover-section
  width: 100vw;
  height: 100vh;

.post-page
  box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5);
  margin: 0 20px;

.post
  width: 100vw;
  height: 100vh;

  .post-body
    overflow-y: auto;

.excerpt
  font-size: 1.2em;
  letter-spacing: 0.02em;
  word-spacing: 0.1em;
  color: rgba(0,0,0,0.62);
  width: calc(100vw - 200px);
  max-width: 900px;
  text-align: center;
  margin: 0 auto;
  position: relative;
  padding: 5px 0;

  &:after
    bottom: 0;
  &:before
    top: 0;

  &:before, &:after
    background-color: #cd9023;
    content: "";
    height: 1px;
    left: 50%;
    margin-left: -18px;
    position: absolute;
    width: 36px;
