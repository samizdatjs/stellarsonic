@import 'settings';

body
  margin: 0;
  min-height: 100vh;
  color: #fff;
  background-color: color-dark;

h1
  font-family: font-secondary;
  font-weight: 200;

p
  font-family: font-primary;
  font-weight: 300;
  font-size: 1.2em;
  letter-spacing: 0.02em;
  word-spacing: 0.1em;

.container
  width: 100vw;
  height: 100vh;
  display: block;
  position: fixed;
  transition: all 0.5s;
  overflow: auto;
  overflow-x: hidden;

.screen
  width: 100vw;
  height: 100vh;

.left
  left: 0;

.right
  right: 0;

.content
  padding-left: 100px;
  padding-right: 100px;
  
  @media screen and (max-width: 1200px)
    padding-left: 50px;
    padding-right: 50px;

.top-left
  @extends .content;
  top: 50px;
  left: 0;
  position: absolute;

.top-right
  @extends .content;
  top: 50px;
  right: 0;
  position: absolute;

.button
  color: #f7c8ab;
  font-size: 1.5em;
  opacity: 0.4;
  transition: opacity .2s;
  z-index: 2;
  text-decoration: none;

  &:hover
    cursor: pointer;
    opacity: 1;
    color: #fff;

.container
  transition: all 0.5s;


// Scrollbar
//-----------------------------------------------------------------------------
::-webkit-scrollbar
  width: 5px;

::-webkit-scrollbar-track
  box-shadow: inset 0 0 5px grey; 
  border-radius: 10px;

::-webkit-scrollbar-thumb
  background: color-primary;
