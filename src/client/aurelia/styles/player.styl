@import 'settings';

player
  grid-row: 3;
  grid-column: 1;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  
  @media screen and (min-width: 900px)
    padding: 0 60px;

  @media screen and (min-width: 1200px)
    min-height: 500px;

  &.active
    transition: margin-top 1s;

  &.inactive
    margin-top: 300px;

  .track-details
    margin: 0 30px;
    padding: 20px 0;
    align-self: end;
    text-align: center;
    
    h1
      margin: 10px 0;

    h2
      font-size: 1rem;
      color: #d6b09b;
      font-family: 'Open Sans Condensed', sans-serif;
      font-weight: 300;
      margin: 0;
  
  .track-controls
    margin: 10px 0;
    text-align: center;

    .timestamp
      margin: 10px 0;
      color: #f7c8ab;
      font-family: 'Open Sans Condensed', sans-serif;
      opacity: 0.6;

    .time
      float: left;
    
    .duration
      float: right;

    .play
      font-size: 35px;

    a
      margin: 20px;
      color: #f7c8ab;
      
      &:hover
        color: #fff;

