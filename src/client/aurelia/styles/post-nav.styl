@import 'settings';

@keyframes postNavEnter
  0% {opacity: 1;}
  100% {opacity: 1;}
@keyframes postNavLeave
  0% {opacity: 1;}
  100% {opacity: 1;}

@keyframes categoriesEnter
  0% {transform: translateY(200px);}
  100% {transform: translateY(0px);}

.post-nav.au-enter-active
  animation: postNavEnter 0.5s;

.carousel
  overflow: hidden;

.carousel-list
  margin: 0;
  list-style: none;

.carousel-item
  position: absolute;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  z-index: 0;
  left: 0;
  transition: all 0.3s;

  .cover-frame
    transform: scale(0.8);
  
  &.selected
    opacity: 1;
    z-index: 1;
    .cover-frame
      margin-left: 0;

    .cover-image
      transition: .2s;

    &:hover
      .cover-image
        opacity: 0.95;

.post-next
  position: absolute;
  top: 50%;
  right: 0;

.post-prev
  position: absolute;
  top: 50%;
  left: 0;
  
@media (max-aspect-ratio: 3/2)
  .post-prev, .post-next
    top: auto;
    bottom: 170px;

.categories
  position: absolute;
  width: 100%;
  bottom: 50px;
  z-index: 2;
  box-sizing: border-box;
  animation: categoriesEnter 0.5s;

  ul
    display: flex;
    flex-direction: row;
    list-style: none;
    justify-content: space-between;
    padding: 0;
    margin-left: -30px;
    margin-right: -30px;

  li
    font-family: 'Raleway', sans-serif;
    font-weight: 200;

    &.active
      border-bottom: 1px solid;

    a
      opacity: 0.8;
      font-size: 1.2em;
      display: block;
      padding: 10px 30px;