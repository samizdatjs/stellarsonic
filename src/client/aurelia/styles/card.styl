@import 'settings';

.card
  display: block;
  height: 100%;
  // box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5);

  .card-content h1
    padding: 0 70px;
    padding-bottom: 10px;
    margin: 0;
    font-size: 1.5em;
    color: #fff;

  .card-image-inner
    position: relative;
    overflow: hidden;
    min-height: 350px;
    background-size: cover;
    background-position: center;

  .card-image-overlay
    position: absolute;
    width: 100%;
    height: 100%;

  footer
    background-color: rgba(0,0,0,.1);

    .card-meta
      padding: 40px 70px;
      display: flex;
      justify-content: space-between;
      margin: 0;

      & > li
        display: inline-block;
        text-transform: uppercase;
        font-family: font-primary;
        font-size: 0.9em;
        color: rgba(255,255,255,.7);

        span, i
          margin-right: 8px;