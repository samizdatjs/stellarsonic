@import 'settings';

.card
  display: block;
  height: 100%;

  .card-image-inner
    position: relative;
    overflow: hidden;
    min-height: 450px;
    background-size: cover;
    background-position: center;

  .card-image-overlay
    position: absolute;
    width: 100%;
    height: 100%;

  .card-title
    position: absolute;
    color: #fff;
    bottom: 0;
    padding: 0 70px;
    width: 100%;
    box-sizing: border-box;

  .card-footer
    background-color: rgba(0,0,0,.1);

    .card-meta
      padding: 40px 70px;
      display: flex;
      justify-content: space-between;
      margin: 0;

      & > li
        display: inline-block;
        text-transform: uppercase;
        font-family: font-primary;
        font-size: 0.9em;
        color: rgba(255,255,255,.7);

        span, i
          margin-right: 8px;