{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["src/client/*"],
      "@domain/*": ["src/domain/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.js"
  ]
}
